
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanelim.cshtml";
}

<h2>Burası Panel Sayfam</h2>
@using (Html.BeginForm("Index", "Panelim", FormMethod.Post))
{
    <table class="table table-hover">
        <tr>
            <td>

                <label style="font-weight:bolder">Öğrenci İd </label>   @TempData["id"].ToString()
            </td>
        </tr>
        <tr>
            <td>

                <label style="font-weight:bolder">Mail adresi: </label>   @HttpContext.Current.User.Identity.Name
            </td>
        </tr>
        <tr>
            @if (@TempData["Ad"] != null)
            {
                <td>
                    Ad:@TempData["Ad"].ToString()
                </td>
            }

        </tr>
        <tr>
            <td>
                Soyad: @TempData["Soyad"].ToString()
            </td>
        </tr>
        <tr>
            @if (@TempData["KAdi"] != null)
            {
                <td>
                    Kullanıcı Adı: @TempData["KAdi"].ToString()
                </td>
            }
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder"> Şifre: </label> <input type="text" class="form-control" value=" @TempData["Sifre"].ToString()" name="SIFRE" />
            </td>
        </tr>
        <tr>
            <td>
                Okul: @TempData["Okul"].ToString()
            </td>
        </tr>
        <tr>
            <td>
                <button class="btn btn-warning ">Şifre Güncelle</button>
            </td>
        </tr>
    </table>
}

