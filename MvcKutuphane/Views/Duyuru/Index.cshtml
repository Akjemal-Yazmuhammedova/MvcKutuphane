@using MvcKutuphane.Models.Entity;
@model List<TBLDUYURULAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Duyurular</h2>
<table class="table table-border">
    <tr>
        <th>Duyuru No</th>
        <th>Kategori</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>Tarih</th>
        <th>İçerik</th>
    </tr>
    @foreach (var prs in Model)
    {


        <tr>
            <td>@prs.ID</td>
            <td>@prs.KATEGORI</td>
            <td><a href="/Duyuru/DuyuruSil/@prs.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Duyuru/DuyuruGetir/@prs.ID" class="btn btn-success">Güncelle</a></td>
            <td>@prs.TARIH</td>
            <td><a href="/Duyuru/DuyuruDetay/@prs.ID" class="btn btn-default" style="background-color:burlywood">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Duyuru/DuyuruEkle" class="btn btn-primary">Yeni Duyuru Ekle</a>

